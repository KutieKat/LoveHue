<div class="modal fade" id="showModal" tabindex="-1" role="dialog" aria-labelledby="showModalTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="showModalLongTitle">Xem thông tin về lợi ích</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            
            <div class="modal-body">
                <form>
                    <div class="row">
                        <div class="col-md-2">
                            <div class="form-group">
                                <label>Hình ảnh</label>
                                <div class="image-preview">
                                    <img id="showModalIcon" class="image-uploader__image" src="/images/image-not-found.jpg" />
                                </div>
                            </div>
                        </div>

                        <div class="col-md-10">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Mã lợi ích</label>
                                        <input id="showModalId" class="form-control" type="text" placeholder="Mã của lợi ích" disabled />
                                    </div>

                                    <div class="form-group">
                                        <label>Tên lợi ích (*)</label>
                                        <input id="showModalName" class="form-control" type="text" placeholder="Tên của lợi ích" disabled />
                                    </div>

                                    <div class="form-group">
                                        <label>Trạng thái</label>
                                        <select id="showModalIsActive" class="form-control" value=${ is_active } disabled>
                                            <option value="0">Chưa hiển thị</option>
                                            <option value="1">Đã hiển thị</option>
                                        </select>
                                    </div>
                                </div>
        
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Ngày tạo</label>
                                        <input id="showModalCreatedAt" class="form-control" type="text" placeholder="Ngày tạo của lợi ích" disabled />
                                    </div>
        
                                    <div class="form-group">
                                        <label>Ngày cập nhật</label>
                                        <input id="showModalUpdatedAt" class="form-control" type="text" placeholder="Ngày cập nhật của lợi ích" disabled />
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Mô tả (*)</label>
                                        <textarea id="showModalDescription" class="form-control" placeholder="Mô tả về lợi ích" disabled></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="text-right">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>