<div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="addModalTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addModalLongTitle">Thêm lợi ích mới</h5>
                <button id="addModalCloseButton" type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            
            <div class="modal-body">
                <form action="/bang-dieu-khien/loi-ich" method="post">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Hình ảnh</label>
                                <div class="image-uploader">
                                    <label for="addModalIcon" class="image-uploader__label" title="Nhấp để tải hình ảnh lên">
                                        <img class="image-uploader__image" src="/images/image-not-found.jpg" />
                                    </label>

                                    <input id="addModalIcon" class="image-uploader__input" type="file" accept="image/x-png,image/gif,image/jpeg" name="icon_file" />
                                    <input type="hidden" class="image-uploader__deletion-flag" name="is_deleted" value="0" />
                                    <button type="button" class="btn btn-sm image-uploader__delete-button">Xóa hình ảnh</button>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Tên lợi ích (*)</label>
                                <input id="addModalName" class="form-control" type="text" placeholder="Tên của lợi ích" name="name" required />
                                <div class="invalid-feedback"></div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Mô tả (*)</label>
                                <textarea id="addModalDescription" class="form-control" name="description" placeholder="Mô tả về lợi ích" required></textarea>
                                <div class="invalid-feedback"></div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Trạng thái</label>
                                <select id="addModalIsActive" class="form-control" name="is_active">
                                    <option value="0">Chưa hiển thị</option>
                                    <option value="1">Đã hiển thị</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="text-right">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal" style="margin-right: 6px;">Đóng</button>
                        <button type="submit" class="btn btn-primary">Thêm mới</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>