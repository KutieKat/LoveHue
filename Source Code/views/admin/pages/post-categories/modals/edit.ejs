<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLongTitle">Chỉnh sửa thông tin của chuyên mục bài viết</h5>
                <button id="editModalCloseButton" type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            
            <div class="modal-body">
                <form>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Mã chuyên mục</label>
                                <input id="editModalId" class="form-control" type="text" placeholder="Mã của chuyên mục" disabled />
                            </div>

                            <div class="form-group">
                                <label>Tên chuyên mục (*)</label>
                                <input id="editModalName" class="form-control" type="text" placeholder="Tên của chuyên mục" name="name" required />
                                <div class="invalid-feedback"></div>
                            </div>

                            <div class="form-group">
                                <label>SEO slug (*)</label>
                                <input id="editModalSeoSlug" class="form-control" type="text" placeholder="SEO slug của chuyên mục" name="seo_slug" required />
                                <div class="invalid-feedback"></div>
                            </div>

                            <div class="form-group">
                                <label>Trạng thái</label>
                                <select id="editModalIsActive" class="form-control" name="is_active">
                                    <option value="0">Chưa hiển thị</option>
                                    <option value="1">Đã hiển thị</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Ngày tạo</label>
                                <input id="editModalCreatedAt" class="form-control" type="text" placeholder="Ngày tạo của chuyên mục" disabled />
                            </div>

                            <div class="form-group">
                                <label>Ngày cập nhật</label>
                                <input id="editModalUpdatedAt" class="form-control" type="text" placeholder="Ngày cập nhật của chuyên mục" disabled />
                            </div>

                            <div class="form-group">
                                <label>Hiện trên menu</label>
                                <select id="editModalShowOnMenu" class="form-control" name="show_on_menu">
                                    <option value="0">Không hiển thị</option>
                                    <option value="1">Có hiển thị</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Mô tả</label>
                                <textarea id="editModalDescription" class="form-control" name="description" placeholder="Mô tả về chuyên mục"></textarea>
                            </div>
                        </div>
                    </div>

                    <div class="text-right">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal" style="margin-right: 6px;">Đóng</button>
                        <button type="submit" class="btn btn-primary">Cập nhật</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>