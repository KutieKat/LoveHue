<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLongTitle">Thêm bài viết mới</h5>
                <button id="editModalCloseButton" type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            
            <div class="modal-body">
                <form enctype="multipart/form-data" action="/bang-dieu-khien/bai-viet" method="post">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Ảnh đại diện</label>
                                        <div class="image-uploader">
                                            <label for="editModalThumbnailImage" class="image-uploader__label" title="Nhấp để tải hình ảnh lên">
                                                <img class="image-uploader__image" src="/images/image-not-found.jpg" />
                                            </label>
        
                                            <input id="editModalThumbnailImage" class="image-uploader__input" type="file" accept="image/x-png,image/gif,image/jpeg" name="thumbnail_image_file" />
                                            <input type="hidden" class="image-uploader__deletion-flag" name="is_deleted" value="0" />
                                            <button type="button" class="btn btn-sm image-uploader__delete-button">Xóa hình ảnh</button>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Tiêu đề (*)</label>
                                        <input id="editModalTitle" class="form-control" type="text" placeholder="Nhập tiêu đề của bài viết" name="title" required />
                                        <div class="invalid-feedback"></div>
                                    </div>
                                </div>
                            
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>SEO slug (*)</label>
                                        <input id="editModalSeoSlug" class="form-control" type="text" placeholder="Nhập SEO slug của bài viết" name="seo_slug" required />
                                        <div class="invalid-feedback"></div>
                                    </div>
                                </div>
                            
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Tóm tắt nội dung</label>
                                        <textarea id="editModalSummary" class="form-control" name="summary" placeholder="Nhập tóm tắt nội dung của bài viết"></textarea>
                                    </div>
                                </div>
                            
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Chuyên mục bài viết</label>
                                        <select id="editModalPostCategory" class="form-control" name="post_category">
                                        </select>
                                    </div>
                                </div>
                            
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Trạng thái</label>
                                        <select id="editModalIsActive" class="form-control" name="is_active">
                                            <option value="0">Chưa hiển thị</option>
                                            <option value="1">Đã hiển thị</option>
                                        </select>
                                    </div>
                                </div>
                            
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Thẻ (Nếu có nhiều thẻ, ngăn cách với nhau bằng dấu phẩy)</label>
                                        <input id="editModalTags" class="form-control" type="text" placeholder="Các thẻ của bài viết" name="tags" />
                                        <div class="invalid-feedback"></div>
                                    </div>
                                </div>
                            
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Nguồn bài viết</label>
                                        <input id="editModalSource" class="form-control" type="text" placeholder="Nguồn trích dẫn của bài viết (nếu có)" name="source" />
                                        <div class="invalid-feedback"></div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Loại bài viết</label>
                                        <select id="editModalIsHot" class="form-control" name="is_hot">
                                            <option value="0">Không nổi bật</option>
                                            <option value="1">Nổi bật</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Ngày tạo</label>
                                        <input id="editModalCreatedAt" class="form-control" type="text" placeholder="Ngày tạo của bài viết" disabled />
                                    </div>
                                </div>
                                
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Ngày cập nhật</label>
                                        <input id="editModalUpdatedAt" class="form-control" type="text" placeholder="Ngày cập nhật của bài viết" disabled />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <input type="hidden" name="author" value="<%= user['_id'] %>" />

                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Nội dung bài viết</label>
                                <textarea id="editModalContent" name="content" class="editor" name="content"></textarea>
                            </div>

                        </div>
                    </div>

                    <div class="text-right">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal" style="margin-right: 6px;">Đóng</button>
                        <button type="submit" class="btn btn-primary">Cập nhật</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>